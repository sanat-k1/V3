<script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
<script>
  let products= {
    "3090":0,
    "3080":0,
    "3070":0,
    "3060":0,
    "2080":0,
    "2070":0,
    "2060":0
  }
  let sum=0
  const cartq = document.getElementById('cartq')
  window.onload = function() {
    const username = Cookies.get('username');
    if (username) {
      document.getElementById('logg').textContent = username;
      document.getElementById('logg').href='/profile';
    } 
   
    const savedProducts = Cookies.get('products');
    if (savedProducts) {
      const parsedProducts = JSON.parse(savedProducts);
      products = parsedProducts;
      Object.assign(products, parsedProducts);
      Object.keys(products).forEach(id => {
        const tag = document.getElementById(`${id}-q`);
        if (tag) {
          tag.textContent = products[id] > 0 ? products[id] : ''; // Display quantity only if greater than 0
          sum += products[id];
        }
      });
      cartq.innerText = sum;
    }
}

function updateQuantity(id, change) {
    const tag = document.getElementById(`${id}-q`);
    products[id] = Math.max(0, products[id] + change);
    try {
        Cookies.set('products', JSON.stringify(products), { expires: 365, path: '/' });
    } catch (e) {
        console.error('Error setting cookie:', e);
    }
    const sum = Object.values(products).reduce((acc, value) => acc + value, 0);
    tag.innerText = products[id] > 0 ? products[id] : ''; // Display quantity only if greater than 0
    cartq.innerText = sum;
}

</script>

