<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= model %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .glass {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    body {
      background: linear-gradient(135deg, #484949f5 0%, #1a1c1d 100%);
    }
    .webgl {
        width: 100%;
        height: 100%;
        outline: none;
        
    }
    .model-container {
      position: relative;
      background: none;
      border: none;
      box-shadow: none;
      z-index: 1; /* Ensure it is above the background */
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <nav class="bg-white bg-opacity-50 shadow-md glass sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="#" class="text-xl font-bold"><%= model %></a>
      <div>
        <a href="/" class="mx-2">Home</a>
        <a href="#" class="mx-2"><button class="bg-blue-500 text-white px-6 py-2 rounded-lg">Add to Cart</button></a>
        <a href="#" class="mx-2">Community</a>
        <a href="#" class="mx-2">Support</a>
      </div>
    </div>
  </nav>

  <!-- Item Details -->
  <div class="container mx-auto px-4 py-8">
    <div class="bg-white bg-opacity-50 shadow-md glass p-6">
      <div class="flex flex-col md:flex-row">
        <!-- Model Container -->
        <div class="md:w-1/2 flex justify-center">
          <div class="model-container bg-gray-200 p-4">
            <canvas class="webgl"></canvas>
          </div>
        </div>
        <!-- Item Details -->
        <div class="md:w-1/2 md:ml-6 mt-6 md:mt-0">
          <h2 class="text-2xl font-bold">Description</h2>
          <p class="text-white-600 mt-2"><%= description.description %></p>
          <div class="mt-6">
            <!-- <button class="bg-blue-500 text-white px-6 py-2 rounded-lg">Add to Cart</button> -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-white bg-opacity-50 shadow-md glass mt-8">
    <div class="container mx-auto px-4 py-4 text-center">
      
    </div>
  </footer>
  <script>
    const model = "<%= model %>";
  </script>
  <script type="module" src="/modelsw.js"></script>
</body>
</html>
